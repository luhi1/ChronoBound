<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".emailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainEmailScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/whitish_square"
            />

        <LinearLayout
            android:id="@+id/titleLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txtEmails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autoSizeTextType="uniform"
                android:background="@drawable/whitish_square"
                android:text="Email A Teacher"
                android:textAlignment="center"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/email1Layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/teal_square"
            android:orientation="vertical"
            android:weightSum="4"
            app:layout_constraintHeight_percent="0.29"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="5">

                <TextView
                    android:id="@+id/tvEmailName1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@drawable/teal_square"
                    android:textColor="#263238"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/email_buttonLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/dark_blue_square"
                    android:visibility="visible">

                    <Button
                        android:id="@+id/email_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"

                        android:text="Email"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvRoomNumber1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/teal_square"
                android:textColor="#263238"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvClassName1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/teal_square"
                android:textColor="#263238"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvTeacherName1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/teal_square"
                android:textColor="#263238"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/email2Layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/whitish_square"
            android:orientation="vertical"
            android:weightSum="4"
            app:layout_constraintHeight_percent="0.29"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email1Layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="5">

                <TextView
                    android:id="@+id/tvEmailName2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@drawable/whitish_square"
                    android:textColor="#263238"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/email_button2Layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/dark_blue_square"
                    android:visibility="visible">

                    <Button
                        android:id="@+id/email_button2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"

                        android:text="Email"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvRoomNumber2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/whitish_square"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvClassName2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/whitish_square"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTeacherName2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/whitish_square"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/email3Layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/teal_square"
            android:orientation="vertical"
            android:weightSum="4"
            app:layout_constraintHeight_percent="0.29"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email2Layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="5">

                <TextView
                    android:id="@+id/tvEmailName3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@drawable/teal_square"
                    android:textColor="#263238"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/email_button3Layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/dark_blue_square"
                    android:visibility="visible">

                    <Button
                        android:id="@+id/email_button3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:text="Email"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvRoomNumber3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/teal_square"
                android:textColor="#263238"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvClassName3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/teal_square"
                android:textColor="#263238"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTeacherName3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/teal_square"
                android:textColor="#263238"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/whitish_square"
            android:orientation="horizontal"
            android:weightSum="10"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email3Layout">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/whitish_square">

                <Button
                    android:id="@+id/btnBackMain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:text="Back"
                    android:textColor="#808080"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="@drawable/whitish_square" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/whitish_square">

                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:text="Next"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/emailLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible"
        android:weightSum="100">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/txtTo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/whitish_square"
            android:hint="To" />

        <EditText
            android:id="@+id/txtSub"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:autofillHints=""
            android:background="@drawable/whitish_square"
            android:hint="Subject"
            android:inputType="text"
            android:minHeight="48dp"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/txtMsg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="85"
            android:autofillHints=""
            android:background="@drawable/teal_square"
            android:gravity="top"
            android:hint="Message"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/backButtonLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/teal_square">

                <Button
                    android:id="@+id/btnBackEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:text="Back"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/teal_square" />

            <RelativeLayout
                android:id="@+id/sendButtonLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/teal_square">

                <Button
                    android:id="@+id/btnSend"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:text="Send"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>